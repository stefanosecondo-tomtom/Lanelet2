FROM ubuntu:18.04 AS lanelet2_deps

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
            build-essential \
            cmake \
            locales \
            software-properties-common


RUN add-apt-repository ppa:deadsnakes/ppa -y
RUN DEBIAN_FRONTEND=noninteractive apt install python3.9 python3.9-dev python3-setuptools python3-pip python3.9-distutils -y

RUN DEBIAN_FRONTEND=noninteractive apt-get install -y \
        libboost-all-dev \
        libeigen3-dev \
        libgeographic-dev \
        libpugixml-dev \
        libboost-python-dev \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

COPY . /workspace
WORKDIR /workspace

RUN python3.9 -m pip install --upgrade pip
RUN python3.9  -m pip install --upgrade setuptools
RUN python3.9 -m pip install wheel
RUN python3.9 setup.py bdist_wheel

##########################################################
#   FINAL IMAGE
##########################################################
FROM  ubuntu:18.04 as app

RUN apt-get update && DEBIAN_FRONTEND=noninteractive apt-get install -y \
            software-properties-common

RUN add-apt-repository ppa:deadsnakes/ppa -y
RUN DEBIAN_FRONTEND=noninteractive apt install python3.9 python3.9-dev python3-setuptools python3-pip python3.9-distutils -y

RUN DEBIAN_FRONTEND=noninteractive apt-get install -y \
        libboost-all-dev \
        libeigen3-dev \
        libgeographic-dev \
        libpugixml-dev \
        libboost-python-dev \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

COPY --from=lanelet2_deps /workspace/dist /workspace
WORKDIR /workspace

RUN python3.9 -m pip install --upgrade pip
RUN python3.9  -m pip install --upgrade setuptools
RUN python3.9 -m pip install lanelet2-1.1.1-cp39-cp39-linux_x86_64.whl